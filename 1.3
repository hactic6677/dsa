#include<iostream>
using namespace std;
int main(){
	int t;
	cin>>t;
	while(t--){
		int n,ck=1;
		cin>>n;
		int a[n];
		
		for(int i=0;i<n;i++){
			cin>>a[i];
		}
		for(int i=0;i<n/2;i++){
			if( a[i]!=a[n-1-i] ) {
				ck=0;
				break;
			}
		}
		if(ck==1) cout<<"YES"<<endl;
		else cout<<"NO"<<endl;
	}
}
